{
	"name": "nodets-api",
	"description": "Boilerplate project for Apis with Node, Typescript, Clean architecture & DDD",
	"version": "1.0",
	"private": true,
	"scripts": {
		"start": "NODE_ENV=development nodemon dist/server.js",
		"watch": "tsc -w",
		"compile": "rimraf dist/ && tsc && npm run db:copy:migration && npm run db:copy:seed",
		"db:copy:migration": "copyfiles -f dist/domains/*/migrations/*.js dist/infrastructure/sequelize/migrations/",
		"db:copy:seed": "copyfiles -f dist/domains/*/seeders/*.js dist/infrastructure/sequelize/seeders/",
		"prettier": "prettier --write 'src/**/*.ts' 'src/**/*.json'",
		"eslint-fix": "eslint . --fix",
		"eslint": "eslint .",
		"db:create": "sequelize db:create --url postgres://user:password@192.168.0.220:5440/pgNodeTSDev",
		"db:migrate": "npm run compile && sequelize db:migrate --url postgres://user:password@192.168.0.220:5440/pgNodeTSDev",
		"db:seed": "npm run compile && sequelize db:seed:all --url postgres://user:password@192.168.0.220:5440/pgNodeTSDev",
		"db:create:test": "sequelize db:create --url postgres://user:password@192.168.0.220:5441/pgNodeTSTest",
		"db:migrate:test": "npm run compile && sequelize db:migrate --url postgres://user:password@192.168.0.220:5441/pgNodeTSTest",
		"db:seed:test": "npm run compile && sequelize db:seed:all --url postgres://user:password@192.168.0.220:5441/pgNodeTSTest",
		"test": "NODE_ENV= jest --coverage --runInBand --detectOpenHandles"
	},
	"dependencies": {
		"bcrypt": "^5.0.0",
		"body-parser": "^1.19.0",
		"config": "^3.3.2",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-jwt": "^6.0.0",
		"helmet": "^4.2.0",
		"joi": "^17.3.0",
		"joiful": "^3.0.0",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"path": "^0.12.7",
		"pg": "^8.4.2",
		"sequelize": "^6.3.5",
		"sequelize-cli": "^6.2.0",
		"swagger-jsdoc": "^6.0.2"
	},
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/config": "^0.0.38",
		"@types/express": "^4.17.11",
		"@types/express-jwt": "^6.0.0",
		"@types/jest": "^26.0.20",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/morgan": "^1.9.2",
		"@types/node": "^14.14.22",
		"@types/sequelize": "^4.28.9",
		"@types/supertest": "^2.0.10",
		"@types/swagger-jsdoc": "^6.0.0",
		"@types/validator": "^13.1.3",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"copyfiles": "^2.4.1",
		"dayjs": "^1.9.6",
		"eslint": "^7.17.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-prettier": "^3.1.4",
		"jest": "^26.6.3",
		"jsdoc": "^3.6.6",
		"prettier": "^2.1.2",
		"rimraf": "^3.0.2",
		"supertest": "^6.0.1",
		"typescript": "^4.1.3"
	}
}
