{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"lib": ["ESNext"],
		"allowJs": true,
		"outDir": "dist",
		// "rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*"
		// "src/**/*.json",
	],
	"exclude": ["node_modules", "dist", "config"]
}
